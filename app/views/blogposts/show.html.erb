<div class="col-md-12">
<h3> <%= @blogpost.title %> </h3>

<h4> <%= @blogpost.name %>, <%= @blogpost.city %>, <%= @blogpost.state %> </h4>

<p> <%= @blogpost.content %> </p>

<% @blogpost.comments.each do |c| %>
	<div><%= c.name %></div>
	<div><%= c.comment %></div>
<% end %>



<h3> New Comment </h3>

<%= form_for( @comment ,:url => {:action => :new_comment, :controller => :blogposts} ) do |f| %>

    <%= hidden_field_tag :blogpost_id, @blogpost.id %>

<div class="col-md-3">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, placeholder: "name", :class => "form-control" %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment, placeholder: "comment", :class => "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn btn-info" %>
    </div>
</div>
<% end %>

<div class="space"></div>

<div class="col-md-12">
<%= link_to "Enrich this enjoyment", edit_blogpost_path(@blogpost) %> |

<%= link_to "Delete this post", :blogpost, method: :delete, data: { confirm: 'Are you sure?'} %> |

<%= link_to "Back to the riches", blogposts_path %>
</div>


