<h2>Enrich Enjoyment</h2>

<%= form_for @blogpost do |f| %>

<div class="col-md-3">
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, placeholder: "name", :class => "form-control" %>
	</div>

	<div class="field">
		<%= f.label :city %>
		<%= f.text_field :city, placeholder:"city", :class => "form-control" %>
	</div>

	<div class="field">
		<%= f.label :state %>
		<%= f.text_field :state, placeholder: "state", :class => "form-control" %>
	</div>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "title", :class => "form-control" %>
	</div>

	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content, placeholder: "content", :class => "form-control", :rows =>"10" %>
	</div>
	
	<div class="actions">
		<%= f.submit "Enriching!", :class => "btn btn-primary" %>
	</div>
</div>

	<% end %>

<div class="col-md-12">
	<%= link_to "Back to the riches", blogposts_path %>
</div>