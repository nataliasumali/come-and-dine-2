<body class="new_blogpost_body">

<!-- log in form -->

<%= form_tag sessions_path do %>

    <div class="col-md-4 col-md-offset-4">

      <h2>Log In</h2>

      <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email], placeholder: "email", :class => "form-control" %>
      </div>

      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, params[:password], placeholder: "password", :class => "form-control" %>
      </div>

      <div class="actions">
      <%= submit_tag "Log In", :class => "btn btn-info" %>
      </div>

    </div>

<% end %>

</body>

